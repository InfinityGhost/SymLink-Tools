<UserControl x:Class="SymLink_Tools.Controls.Status" Name="WindowRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymLink_Tools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="18" d:DesignWidth="800">
    <Grid DataContext="{Binding ElementName=WindowRoot}">
        <TextBlock Text="{Binding Path=StatusText, Mode=TwoWay}" Height="18" Margin="5,0,0,0"/>
    </Grid>
</UserControl>
